{
  "name": "avalanche-extension",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "build:inpage": "webpack --config webpack.inpage.js",
    "dev": "yarn run build:inpage && webpack -w --config webpack.dev.js",
    "build": "yarn run build:inpage --mode=production && webpack --config webpack.prod.js",
    "test": "yarn cypress open",
    "lint": "eslint --fix -c ./.eslintrc.js \"src/**/*.ts*\"",
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "zip": "node zipscript.js",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@cypress/react": "^5.3.4",
    "@cypress/webpack-dev-server": "^1.1.4",
    "@google/semantic-release-replace-plugin": "^1.1.0",
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/exec": "^6.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^8.0.1",
    "@types/bn.js": "^5.1.0",
    "@types/chrome": "^0.0.145",
    "@types/jest": "^26.0.22",
    "@types/node": "^15.6.1",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.3",
    "@types/react-custom-scrollbars": "^4.0.8",
    "@types/react-dom": "^17.0.3",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "bestzip": "^2.2.0",
    "css-loader": "^5.2.4",
    "cypress": "^7.1.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "jest-css-modules": "^2.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "semantic-release": "^18.0.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.0.2",
    "typescript": "^4.2.4",
    "webextension-polyfill-ts": "^0.25.0",
    "webpack": "^5.34.0",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@avalabs/avalanche-wallet-sdk": "^0.9.10",
    "@avalabs/react-components": "1.25.1",
    "@avalabs/wallet-react-components": "1.7.2",
    "@metamask/post-message-stream": "^4.0.0",
    "@metamask/providers": "^8.1.1",
    "@pangolindex/exchange-contracts": "^1.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-transition-group": "^4.4.3",
    "abi-decoder": "^2.4.0",
    "bip39": "^3.0.4",
    "bn.js": "5.1.0",
    "copy-webpack-plugin": "^9.0.1",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.25.0",
    "eth-json-rpc-middleware": "7.0.1",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.0.10",
    "extension-port-stream": "^2.0.1",
    "extensionizer": "^1.0.1",
    "fs": "^0.0.1-security",
    "i18next": "^20.2.1",
    "i18next-browser-languagedetector": "^6.1.0",
    "lodash.debounce": "4.0.8",
    "loglevel": "^1.7.1",
    "node-polyfill-webpack-plugin": "^1.1.1",
    "obj-multiplex": "^1.0.0",
    "pump": "^3.0.0",
    "pumpify": "^2.0.1",
    "qrcode.react": "^1.0.1",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.8.13",
    "react-modal": "^3.14.3",
    "react-router-dom": "^5.2.0",
    "react-tabs": "^3.2.2",
    "react-test-renderer": "^17.0.2",
    "react-transition-group": "^4.4.2",
    "rxjs": "^7.3.0",
    "store": "^2.0.12",
    "styled-components": "^5.2.3",
    "web3": "^1.3.6"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxBracketSameLine": false
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "release": {
    "branches": [
      "release"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "*",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "dist/manifest.json"
              ],
              "from": "\"version\": \".*\"",
              "to": "\"version\": \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "dist/manifest.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn zip"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "builds/avalanche-wallet-extension.zip",
              "name": "Avalanche-wallet-extension-${nextRelease.gitTag}.zip",
              "label": "Wallet Extension (${nextRelease.gitTag})"
            }
          ],
          "failTitle": false,
          "successComment": false,
          "failComment": false,
          "labels": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "volta": {
    "node": "16.10.0"
  }
}
